# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 140

[*.{java,groovy,kt}]
max_line_length = 100

[*.scala]
indent_size = 2
max_line_length = 100

[*.sh]
indent_size = 4
max_line_length = 80

[*.{js,ts,css,scss}]
indent_size = 2

[*.{json,yaml,yml,xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
