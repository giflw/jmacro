<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-4level] - %msg%n"/>
    </Console>
    <RollingFile
      name="RollingFile"
      fileName="${sys:app.home}/logs/jmacro-${sys:app.starttime}-${sys:app.pid}.log"
      filePattern="${sys:app.home}/logs/jmacro-${sys:app.starttime}-${sys:app.pid}.%d{yyyy-MM-dd}-%i.log.gz"
      ignoreExceptions="false">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss} %c %-5p (%t) %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="false"/>
        <SizeBasedTriggeringPolicy size="1MB"/>
      </Policies>
      <DefaultRolloverStrategy>
        <Delete basePath="${sys:app.home}/logs" maxDepth="2" testMode="false">
          <IfFileName glob="*"/>
          <IfLastModified age="P1D"/>
        </Delete>
      </DefaultRolloverStrategy>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.hc.client5.http.impl.auth.HttpAuthenticator" level="error" additivity="false">
      <AppenderRef ref="RollingFile"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>
